<%=form_with model:employee do |form| %>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <%=form.label :first_name, class:"mb-2"%>
                <%=form.text_field :first_name, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <%=form.label :last_name, class:"mb-2"%>
                <%=form.text_field :last_name, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="form-group">
                <%=form.label :personal_email, class:"mb-2"%>
                <%=form.text_field :personal_email, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :salary, class:"mb-2"%>
                <%=form.number_field :salary, class:"form-control rounded-0"%>
            </div>
        </div>
        
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :address_line_1, class:"mb-2"%>
                <%=form.text_field :address_line_1, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :city, class:"mb-2"%>
                <%=form.text_field :city, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :pincode, class:"mb-2"%>
                <%=form.text_field :pincode, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :state, class:"mb-2"%>
                <%=form.text_field :state, class:"form-control rounded-0"%>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <%=form.label :country, class:"mb-2"%>
                <%=form.text_field :country, class:"form-control rounded-0"%>
            </div>
        </div>
        
            <div class="row">
                <div class="col-lg-12">
                    <%=form.submit class:"btn btn-primary btn-lg rounded-0 mt-5"%>
                    <%=link_to "Back to Employees", employees_path, class:"btn btn-primary btn-lg rounded-0 mt-5"%>
                </div>
            </div>
    </div>
<%end%>